@model List<MovieApp.Model.dbAdmins>

@{
    ViewBag.Title = "List Admins";
}
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css" type="text/css" />
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!--<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script> -->
    <script src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $("#myTable").dataTable();
        });
    </script>
</head>
<body style="color: black">
    <div class="panel-body table-responsive" style="background-color:#eeeeee; margin: 7% 2% 2% 2%">
        <table table class="table table-responsive table-bordered table-hover" id="myTable" style="margin-top: -1%" cellspacing="0" width="100%">
            <p>
                @Html.ActionLink("Add new Admin user", "RegisterAdmin", "Admin", new { @class = "btn btn-default btn-lg btn-block" })
            </p>
            <thead>
                <tr>
                    <th style="text-align:left">Username</th>
                    <th style="text-align:left">Manage</th>
                    @*<th style="text-align:left">Password</th>*@

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.adminUser)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditAdmin", new { id = item.adminID }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Delete", "DeleteAdmin", new { id = item.adminID }, new { @class = "btn btn-danger" })
                    </td>
                    <td style="visibility:hidden">
                        @Html.DisplayFor(modelItem => item.passwordAdmin)
                    </td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</body>

