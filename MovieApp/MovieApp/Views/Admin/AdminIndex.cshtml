@model MovieApp.Model.Admin


@{
    ViewBag.Title = "AdminIndex";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>

<body style="background-color:#78909c ">


    <div class="container" style="margin: 5% 5% 5% 5%">

        <div class="box">
            <div class="container">
                <div class="row">

                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12" style="border:solid; opacity:0.8; border-radius: 25px; background-color:#eceff1">

                        <div class="box-part text-center">

                            <div class="card-img">
                                <img src="" alt="">
                            </div>

                            <div class="title">
                                <h3>Manage customers</h3>
                            </div>

                            <div class="text">
                                <span># customers registered</span>
                            </div>
                            <a href="/Customer/ListCustomers" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Learn More</a>

                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12" style="border:solid; opacity:0.8; border-radius: 25px; background-color:#eceff1">

                        <div class="box-part text-center">

                            <div class="card-img">
                                <img src="" alt="">
                            </div>

                            <div class="title">
                                <h3>Manage orders</h3>
                            </div>

                            <div class="text">
                                <span># orders processed</span>
                            </div>
                            <a href="/Order/ListOrders" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Learn More</a>

                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12" style="border:solid; opacity:0.8; border-radius: 25px; background-color:#eceff1">

                        <div class="box-part text-center">

                            <div class="card-img">
                                <img src="" alt="">
                            </div>

                            <div class="title">
                                <h3>Manage movies</h3>
                            </div>

                            <div class="text">
                                <span># movies in the database.</span>
                            </div>
                            <a href="/Movie/ListMovies" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Learn More</a>

                        </div>
                    </div>

                </div>
            </div>
            
        </div>
</body>