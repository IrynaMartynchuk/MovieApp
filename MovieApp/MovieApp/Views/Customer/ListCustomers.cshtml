@model List<MovieApp.Model.Customer>

@{
    ViewBag.Title = "List Customers";
}

<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css" type="text/css" />
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!--<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script> -->
    <script src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $("#myTable").dataTable();
        });
    </script>
</head>
<body style="color: black">
    <div class="panel-body table-responsive" style="background-color:#eeeeee; margin: 7% 2% 2% 2%">
        <table class="table table-responsive table-bordered table-hover" id="myTable" style="margin-top: -1%" cellspacing="0" width="100%">
            <p>
                @Html.ActionLink("Add Customer", "RegisterCustomer", "Customer", new { @class = "btn btn-default btn-lg btn-block" })
            </p>
            <thead>
                <tr>
                    <th style="text-align:left">Name</th>
                    <th style="text-align:left">Surname</th>
                    <th style="text-align:left">Email</th>
                    <th style="text-align:left">Orders</th>
                    <th style="text-align:left">Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.ActionLink("Check orders", "getOrders", "Order", new { id = item.Id }, new { id = "linkId" })
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditCustomer", new { id = item.Id }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Details", "ViewDetails", new { id = item.Id }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Delete", "DeleteCustomer", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>