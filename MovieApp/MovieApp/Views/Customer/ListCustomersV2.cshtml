@model List<MovieApp.Model.Customer>

@{
    ViewBag.Title = "ListCustomers";
}
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('[data-toggle="popover"]').popover({
                title: setData,
                html: true,
                placement: 'right'
            });
            function setData(id) {
                var set_data = '';
                var element = $(this);
                var id = element.attr("id");
                $.ajax({
                    url: "/Order/getOrders?id" + id,
                    method: "post",
                    async: false,
                    data: { id: id },
                    success: function (data) {
                        set_data = data;
                    }
                });
                return set_data
            }
        });
    </script>
</head>
<body>
    <h2>Customers</h2>

    <p>
        @Html.ActionLink("New Customer", "RegisterCustomer", "Customer", new { @class = "btn btn-primary" })
    </p>
    <table class="table" style="background-color: white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Orders)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Check orders", "getOrders", "Order", new { id = item.Id }, new { id = "linkId" })
                    <a href="#" data-toggle="popover" data-trigger="hover" id="@item.Id">Order</a>
                </td>
                <td>

                    @Html.ActionLink("Edit", "EditCustomer", new { id = item.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Details", "ViewDetails", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "DeleteCustomer", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</body>
