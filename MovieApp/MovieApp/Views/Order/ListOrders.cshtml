@model List <MovieApp.Model.Order>

@{
    ViewBag.Title = "ListOrders";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <title>ListOrders</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('[data-toggle="popover"]').popover({
                title: setData,
                html: true,
                placement: 'right'
            });
            function setData(id) {
                var set_data = '';
                var element = $(this);
                var id = element.attr("id");
                $.ajax({
                    url: "/Order/getOrderlines?id" + id,
                    method: "post",
                    async: false,
                    data: { id: id },
                    success: function (data) {
                        set_data = data;
                    }
                });
                return set_data
            }
        });
    </script>
</head>
<body>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].OrderLines)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Customer)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                @Html.ActionLink("Check items in order", "getOrderlines", "Order", new { id = item.Id }, new { id = "linkId" })
                <a href="#" data-toggle="popover" data-trigger="hover" id="@item.Id">Movies in order</a>
                </td>
                <td>
                    
                </td>
                <td>

                    @Html.ActionLink("Edit", "EditOrder", new { id = item.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("deleteOrder", "DeleteOrder", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
                </tr>
                    }

                </table>
</body>
</html>
