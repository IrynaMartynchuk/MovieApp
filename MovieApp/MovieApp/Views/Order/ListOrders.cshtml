@model List <MovieApp.Model.Order>

@{
    ViewBag.Title = "ListOrders";
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css" type="text/css" />
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!--<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script> -->
    <script src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $("#myTable").dataTable();
        });
    </script>
</head>
<body>
    <div class="panel-body table-responsive" style="background-color:#eeeeee; margin: 7% 2% 2% 2%">
        <table class="table table-responsive table-bordered table-hover" id="myTable" style="margin-top: -1%" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th style="text-align:left">Id</th>
                    <th style="text-align:left">Date</th>
                    <th style="text-align:left">Order lines</th>
                    <th style="text-align:left">Customer</th>
                    <th style="text-align:left">Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.ActionLink("Check items in order", "getOrderlines", "Order", new { id = item.Id }, new { id = "linkId" })
                        </td>
                        <td>
                            
                        </td>
                        <td>

                            @Html.ActionLink("Edit", "EditOrder", new { id = item.Id }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Delete order", "DeleteOrder", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
