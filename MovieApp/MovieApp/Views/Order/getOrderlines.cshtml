@model List < MovieApp.Model.Orderline>
@{
    ViewBag.Title = "getOrderlines";
}
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css" type="text/css" />
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!--<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script> -->
    <script src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $("#myTable").dataTable();
        });
    </script>
</head>
<body>
    <h1 style="text-align: center; border-bottom: 1px solid #000000">Active orders</h1>
    <div class="panel-body table-responsive" style="background-color:#eeeeee; margin: 7% 2% 2% 2%">

        <table class="table table-responsive table-bordered table-hover" id="myTable" style="margin-top: -1%" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th style="text-align:left">Orderline Id</th>
                    <th style="text-align:left">Movie Id</th>
                    <th style="text-align:left">Movie title</th>
                    <th style="text-align:left">Price</th>
                    <th style="text-align:left">Customer Id</th>
                    <th style="text-align:left">Customer Name</th>
                    <th style="text-align:left">Customer Surname</th>
                    <th style="text-align:left">Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)

                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.MovieId</td>
                        <td>@item.Movie.Title</td>
                        <td>@item.Movie.Price</td>
                        <td>@item.Order.Customer.Id</td>
                        <td>@item.Order.Customer.Name</td>
                        <td>@item.Order.Customer.Surname</td>
                        <td>@item.Order.Customer.Email</td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>