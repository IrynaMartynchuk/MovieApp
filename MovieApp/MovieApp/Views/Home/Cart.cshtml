@model IEnumerable<MovieApp.Models.Movie>

@{
    ViewBag.Title = "Cart";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script type="text/javascript">
        $(document).ready(function () {
            
            $('.delete').click(function () {
                var dataid = $(this).attr('dataid');
                $.ajax({
                    url: "/Home/Delete",
                    data: { id: dataid },  // en parameter inn i slett(id)-metoden i kunde-kontrolleren (JSON-objekt)
                    success: function () {
                        // må kalle liste-metoden for å vise den nye listen av kunder
                        $.ajax({
                            url: '@Url.Action("Cart", "Home")',
                            success: function () {
                                // så må siden reloades!
                                window.location.reload();
                            }
                        });
                    }
                });
            });

           $('#confirm').click(function () {
               $.ajax({
                    url: '@Url.Action("Confirmation", "Home")',
                   success: function (message) {
                               alert(message);
                              window.location.reload();
                           }
});
          });
        });
</script>

<h2>Cart</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>

            <td>
            <td><button class="btn btn-large btn-danger delete" dataid="@item.Id">Remove</button></td>
            </td>
        </tr>
        <tr>
            <button id="confirm">@Html.ActionLink("Confirm your order", "changeConfirmationStatus", new { id = item.Id })</button>
        </tr>
    }
        
</table>
