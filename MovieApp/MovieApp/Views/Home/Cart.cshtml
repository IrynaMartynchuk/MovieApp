@model IEnumerable<MovieApp.Models.Movie>

@{
    ViewBag.Title = "Cart";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Style.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('.delete').click(function () {
                var dataid = $(this).attr('dataid');
                $.ajax({
                    url: "/Home/Delete",
                    data: { id: dataid },  // en parameter inn i slett(id)-metoden i kunde-kontrolleren (JSON-objekt)
                    success: function () {
                        // må kalle liste-metoden for å vise den nye listen av kunder
                        $.ajax({
                            url: '@Url.Action("Cart", "Home")',
                            success: function () {
                                // så må siden reloades!
                                window.location.reload();
                            }
                        });
                    }
                });
            });

           $('#confirm').click(function () {
               $.ajax({
                    url: '@Url.Action("Confirmation", "Home")',
                   success: function (message) {
                               alert(message);
                              window.location.reload();
                           }
});
          });
        });

    </script>
</head>
<body>

    <div class="panel panel-defaul" style="margin: 15% 2% 2% 2%; background-color:burlywood; color: black; font-size:15px ">
        <div class="panel-body">
            <table class="table table-hover">
                <tr>
                    <th style="text-align:left">TITLE</th>
                    <th style="text-align:left">GENRE</th>
                    <th style="text-align:right">PRICE</th>
                </tr>
                @{
                    double total = 0;
                }

                @foreach (var movie in Model)
                {
                    var moviePrice = movie.Price;
                    total = total + moviePrice;

                }

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Genre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td><button class="btn btn-danger delete col-sm-offset-2 col-sm-10" dataid="@item.Id">Remove</button></td>
                    </tr>
                    <tr>
                        <button id="confirm">@Html.ActionLink("Confirm your order", "changeConfirmationStatus", new { id = item.Id })</button>
                    </tr>
                }

            </table>
            <h2>
                Total sum: @(total) NOK
                <br />
                <br />
                @Html.ActionLink("Check Out", "changeConfirmationStatus", "Order", new { area = "" }, htmlAttributes: new { @class = "btn btn-large btn-primary" })
            </h2>
    </div>
</div>
</body>